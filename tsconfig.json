{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2020",
		"target": "ES2020",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"lib": ["ES2020", "dom"]
	},
	"exclude": ["test", "dist", "**/*.spec.ts", "jest.config.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}